{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"],
      "@/config/*": ["./config/*"],
      "@/controllers/*": ["./controllers/*"],
      "@/models/*": ["./models/*"],
      "@/routes/*": ["./routes/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"],
      "@/validations/*": ["./validations/*"],
      "@/types/*": ["./types/*"],
      "@/middlewares/*": ["./middlewares/*"]
    }
  },
  "include": ["src/**/*", "./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/__tests__/**/*"]
}
